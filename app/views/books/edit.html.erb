  <h1>New book</h1>



  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

    <div class="field">

      <label>Title</label>

      <%= f.text_field :title %>

    </div>

    <div class="field">

      <label>Body</label>

      <%= f.text_area :body %>

    </div>

    <div class="actions">

      <%= f.submit 'Update Book' %>

    </div>

  <% end %>

  <%= link_to "Show", book_path(@book.id) %>
  <span>|</span>
  <a href="/books">Back</a>
